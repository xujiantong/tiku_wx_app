.tiku-nav-bar{
  position: relative;
}
.nav-bar{
  width: 100%;
  height: 350rpx;
  background-image: linear-gradient(to bottom, #1370EB 0%, rgb(85, 152, 240) 100%);
  position: relative;
  margin-bottom: 80rpx;
}
.header{
  height: 100rpx;
  width: 100%;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
}
.avator{
  display: block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.check-block{
  width: auto;
  min-width: 200rpx;
  height: 70rpx;
  margin-left: 15rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: flex-start;
}
.tiku-cate-name{
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}
.tiku-cate-name image{
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}
.tiku-item-text{
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #B4B5F5;
}


.action-row{
  width: 100%;
  height: 160rpx;
  /* background-color: rgba(255,255,255,0.1); */
  position: relative;
  display: flex; 
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.action-item{
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.action-item image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 20rpx;
}
.action-item text{
  text-align: center;
  color:#fff;
  font-size: 24rpx;
}
.banner {
  position: absolute;
  width: 100%;
  height: 140rpx;
  bottom: -70rpx;
  left:0;
  right:0;
  /* background-color: rgba(0,0,0,0.5); */
  padding: 0 35rpx;
  box-sizing: border-box;
}
.count-row{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-radius: 100rpx;
  box-shadow: 0 1px 5rpx  rgba(47, 114, 201, 0.5);
}