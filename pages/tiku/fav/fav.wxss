
.fav {
    width: 100%;
    height: 100%;
    overflow: auto;
    background: #fff;
}
.fav-header {
    width: 100%;
    height: 350rpx;
    background-image: linear-gradient(to bottom, #1370EB 0%, rgb(85, 152, 240) 100%);
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}
.count{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0.8);
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}
.count text.count-number{
    font-size: 32rpx;
    color: #1370EB;
    font-weight: bold;
    margin-bottom: 10rpx;
}
.count text.count-text{
    font-size: 24rpx;
    color: #1370EB;
}
.block-hr{
    height: 10rpx;
    background: #eeeeee;
}
.fav-list{
    width: 100%;
    height: auto;
}
.fav-item{
    height: 80rpx;
    width: 100%;
    border-bottom: 1px solid #eee;
    /*padding-right: 40rpx;*/
    box-sizing: border-box;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
}
.fav-item-info{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding-left: 20rpx;
}
.fav-item-info .fav-item-depot{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
}
.dot{
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: rgba(85, 152, 240, 0.3);
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
    margin-right: 10rpx;
}
.dot-small{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: rgba(85, 152, 240, 0.8);
}
.name{
    color: #666;
    font-size: 28rpx;
}
.fav-item-info .fav-item-count{
    color: #bbb;
    font-size: 28rpx;
}
.fav-item image{
    flex-grow: 0;
    flex-shrink: 0;
    width: 30rpx;
    height: 30rpx;
    margin: 0 10rpx;
}
























