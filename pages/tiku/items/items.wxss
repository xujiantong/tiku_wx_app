.container{
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    border-top: 1px solid #eeeeee;
    box-sizing: border-box;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: center;
    position: relative;
}
.container swiper{
    width: 100%;
    height: 100%;
    padding-bottom: 100rpx;
    box-sizing: border-box;
}
.container swiper swiper-item {
    width: 100%;
    height: 100%;
    overflow: auto;
}
.tiku-item{
    padding: 20rpx;
    box-sizing: border-box;
}
.item-info{
    height: 52rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #999;
    padding-bottom: 15rpx;
    margin-bottom: 15rpx;
}
.item-info view {
    display: flex;
    align-items: center;
}
.item-type{
    font-size: 20rpx;
    background-color: #51A9F3;
    color: #ffffff;
    padding: 4rpx 10rpx;
    margin-left: 8rpx;
    border-radius: 8rpx;
    box-sizing: border-box;

}
.tiku-item-main {
    font-size: 32rpx;
    line-height: 48rpx;
    margin-bottom: 30rpx;
    color: #333;
    letter-spacing: 0.1px;
    text-align: justify;

}
.tiku-item-options{

}
.tiku-item-option{
    min-height: 40rpx;
    margin-bottom: 10rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    /* align-items: center; */
    padding: 15rpx 0;
}
.option-key{
    margin-right: 20rpx;
}
.tiku-item-action{
    width: 100%;
    height: auto;
    padding-bottom: 40rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    /* box-shadow: 1px 1px 5px rgba(0,0,0,0.1); */
    border-top: 1px solid #eeeeee;
    position: absolute;
    bottom: 0;
    left:0;
    right:0;
    z-index: 9999;
    background-color: #ffffff;
    transition: 1s all;
}
.tiku-action-section{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
}
.action-left{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 100rpx;
}
.action-left .fav{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    padding: 0 20rpx;
}
.action-left .fav image{
    width: 40rpx;
    height: 40rpx;
}
.action-left .fav text{
    font-size: 24rpx;
    padding-left: 8rpx;
}
.unfav-text{
    color: #bbb;
}
.fav-text{
    color: #F4EA2A;
}
.action-right{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    height: 100rpx;
}
.action-right .card{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    padding: 0 20rpx;
}
.action-right .card image{
    width: 40rpx;
    height: 40rpx;
}
.action-right .card text{
    font-size: 24rpx;
    color: #1296DB;
    padding-left: 8rpx;
}
.action{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    color: #bbbbbb;
}
.action image{
    width: 60rpx;
    height: 60rpx;
}
.currentIndex{
    color: #277CEC;
}
.currentKey{
  
    color: #277CEC;
}
.errorKey{
    color: red;
}
.currentKey .option-key{
   
}
.tiku-answer-sheet{
    height: auto;
    max-height: 500rpx;
    overflow: auto;
    padding: 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: center;
}
.tiku-answer-sheet .sheet-item{
    width: 60rpx;
    height: 60rpx;
    margin:25rpx;
    border-radius: 50%;
    background-color: #eee;
    color: #999;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}
.tiku-answer-sheet .successKey{
    background-color: #51A9F3;
    color: #ffffff;
}
.tiku-answer-sheet .errKey{
    background-color: #EB5A53;
    color: #ffffff;
}
.answer{
    width: 80%;
    height: 60rpx;
    background-image: linear-gradient(to bottom, #1370EB 0%, rgb(85, 152, 240) 100%);
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    color: #fff;
    border-radius: 30rpx;
    margin: 45rpx auto;
    font-size: 28rpx;
}
.confirm-answer{
    width: 80%;
    height: 60rpx;
    background-image: linear-gradient(to bottom, #1370EB 0%, rgb(85, 152, 240) 100%);
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    color: #fff;
    border-radius: 30rpx;
    margin: 45rpx auto;
    font-size: 28rpx;
}

