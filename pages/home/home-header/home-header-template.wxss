.header-swiper{
  height: 370rpx;
  background-color: #ffffff;
}
.header-swiper swiper{
  height: 290rpx;
}
.header-swiper swiper image {
  width: 100%;
  height: 100%;
}
.header-swiper  .top-news{
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.header-swiper  .top-news image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10px;
}
.header-swiper .top-news .top-news-text{
  display: flex;
  align-items: center;
  height: 60rpx;
  font-family: "微软雅黑";
  font-size: 24rpx;
}